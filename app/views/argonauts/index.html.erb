<!-- Header section -->
<header>
  <h1>
    <img src="https://www.wildcodeschool.com/assets/logo_main-e4f3f744c8e717f1b7df3858dce55a86c63d4766d5d9a7f454250145f097c2fe.png" alt="Wild Code School logo" />
    Les Argonautes
  </h1>
</header>

<!-- Main section -->
<main>
  
  <!-- New member form -->
  <h2>Ajouter un(e) Argonaute</h2>
  <div class="new-member-form">
    <%= simple_form_for(@argonaut) do |f| %>
      <%= f.input :name, label: "Nom de l'Argonaute", placeholder: "Charalampos" %>
      <%= f.submit "Ajouter" %>
    <% end %>
  </div>
  
  <!-- Member list -->
  <h2>Membres de l'équipage</h2>
  <div class="row">
    <% @argonauts.each do |argonaut| %>
      <div class="column">
        > <%= argonaut.name %> <%= link_to "x", argonaut, method: "delete", class: "text-danger", data: {confirm: "Etes vous sur?"}  %>
      </div>
    <% end %>
  </div>
</main>

<footer>
  <p>Réalisé par Alexis en Aquitaine de l'an 2021 après JC</p>
</footer>